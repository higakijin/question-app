<div style="width: 100%; padding: 0 30%; margin-top: 100px">
  <div style="display: flex;">
    <i class="far fa-comment mr-5" style="font-size: 300px;"></i>
    <i class="fab fa-quora d-flex align-items-center" style="font-size: 200px;"></i>
  </div>
</div>

<div class="container" style="margin-top: 80px;">
  <%= form_with model:@user do |f| %>
    <div class="form-group offset-1 col-10 mb-4">
      <%= f.text_field :name, placeholder: "ユーザー名", class: "form-control" %>
    </div>
    <div class="form-group offset-1 col-10 mb-4">
      <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control" %>
    </div>
    <div class="form-group offset-1 col-10 mb-4">
      <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
    </div>
    <div class="form-group offset-1 col-10 mb-4">
      <%= f.password_field :password_confirmation, placeholder: "パスワード（確認）", class: "form-control" %>
    </div>
    <div class="form-group offset-1 col-10 mb-4">
      <%= f.submit "登録", class: "btn btn-primary mx-auto d-flex align-items-center mx-auto" %>
    </div>
    <p class="col-10 offset-1 text-right">または<%= link_to "ログイン", login_path, style: "text-decoration: none;" %></p>
  <% end %>
</div>