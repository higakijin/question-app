<%= render 'layouts/nav' %>


<div class="container" style="margin-top: 100px;">
  <%= form_with model:@user do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "ユーザー名", class: "w-100 form-control" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "メールアドレス", class: "w-100 form-control" %>
    </div>

    <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
    <div class="form-group">
      <%= f.submit "登録", class: "d-flex align-items-center mx-auto btn btn-primary mt-5" %>
    </div>
  <% end %>
</div>