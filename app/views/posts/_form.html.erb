<div class="container" style="margin-top: 100px;">
  <%= form_with model: post do |f| %>
    <div class="form-group">
      <%= f.text_area :title, placeholder: "質問タイトル", class: "w-100 form-control", rows: 2 %>
    </div>

    <div class="form-group">
      <%= f.text_area :body, placeholder: "質問内容", class: "w-100 form-control", rows: 15 %>
    </div>

    <div class="form-group mr-3">
      <%= f.submit "投稿", class: "d-flex align-items-center mx-auto btn btn-primary btn-lg mt-5" %>
    </div>    

  <% end %>
</div>