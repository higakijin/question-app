<div class="row mt-2 mr-4">
  <ul class="nav d-flex align-items-center">
    <li class="nav-item">
      <h1 class="far fa-comment mr-2 ml-5"></h1><h2 class="fab fa-quora"></h2>
    </li>
  </ul>
  <ul class="nav d-flex align-items-center ml-auto">
    <li class="nav-item">
      <%= link_to "ユーザー一覧", users_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "質問一覧", root_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "質問する", new_post_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <% if session[:user_id] %>
        <%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %>
      <% else %>
        <%= link_to "ログイン", login_path, class: "nav-link" %>
      <% end %>
    </li>
    <li class="nav-item">
      <% if session[:user_id] %>
        <%= link_to edit_user_path(session[:user_id]), class: "nav-link" do %>
          <%= attachment_image_tag User.find(session[:user_id]), :image, :fill, 60, 60, fallback: "no_image.png", size: "60x60", style: "border-radius: 50%;" %>
        <% end %>
      <% else %>
        No user
      <% end %>
    </li>
  </ul>
</div>