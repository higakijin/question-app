<div style="width: 100%; padding: 0 30%; margin-top: 100px">
  <div style="display: flex;">
    <div class="far fa-comment mr-5" style="font-size: 300px;"></div>
    <div class="fab fa-quora d-flex align-items-center" style="font-size: 200px;"></div>
  </div>
</div>

<div class="container" style="margin-top: 80px;">
  <%= form_with scope: :session, method: :post do |f| %>
    <div class="form-group offset-1 col-10 mb-4">
      <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
    </div>
    <div class="form-group offset-1 col-10 mb-4">
      <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
    </div>
    <div class="form-group mb-5">
      <%= f.submit "ログイン", class: "btn btn-primary mx-auto d-flex align-items-center mx-auto" %>
    </div>
  <% end %>
  <p class="col-10 offset-1 text-right">または<%= link_to "新規登録", new_user_path, style: "text-decoration: none;" %></p>
</div>

